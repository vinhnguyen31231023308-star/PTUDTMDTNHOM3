@model HairNovaShop.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - HairNovaShop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/head.css" />
    <link rel="stylesheet" href="~/css/account.css" />
</head>
<body>
    <!-- Header (Partial View) -->
    @await Html.PartialAsync("_Header")

    <!-- Nền bong bóng -->
    <div class="bg-bubbles">
        <span class="bubble b1"></span>
        <span class="bubble b2"></span>
        <span class="bubble b3"></span>
        <span class="bubble b4"></span>
        <span class="bubble b5"></span>
        <span class="bubble b6"></span>
    </div>

    <!-- CARD ĐĂNG NHẬP -->
    <div class="auth-wrapper">
        <div class="auth-card auth-card-login">
            <h1 class="auth-title">Đăng nhập</h1>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            <form class="auth-form" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="auth-input-group">
                    <label asp-for="Username">Tên đăng nhập</label>
                    <div class="auth-input-wrapper">
                        <input type="text" asp-for="Username" placeholder="Nhập tên đăng nhập" required />
                    </div>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>

                <div class="auth-input-group">
                    <label asp-for="Password">Mật khẩu</label>
                    <div class="auth-input-wrapper">
                        <input type="password" asp-for="Password" placeholder="Nhập mật khẩu" required />
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="auth-options">
                    <label class="auth-remember">
                        <input type="checkbox" asp-for="RememberMe" />
                        Ghi nhớ đăng nhập
                    </label>
                    <a asp-action="ForgotPassword" class="auth-link">Quên mật khẩu?</a>
                </div>

                <button type="submit" class="auth-btn">Đăng nhập</button>

                <div class="auth-footer">
                    <span>Chưa có tài khoản?</span>
                    <a asp-action="Register" class="auth-link-highlight">Đăng ký ngay</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/head.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
