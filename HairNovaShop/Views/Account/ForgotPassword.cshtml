@model HairNovaShop.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Quên mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <title>@ViewData["Title"] - HairNovaShop</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/head.css" />
    <link rel="stylesheet" href="~/css/account.css" />
</head>
<body>
    <!-- Header (Partial View) -->
    @await Html.PartialAsync("_Header")


    <!-- Nền bong bóng -->
    <div class="bg-bubbles">
        <span class="bubble b1"></span>
        <span class="bubble b2"></span>
        <span class="bubble b3"></span>
        <span class="bubble b4"></span>
        <span class="bubble b5"></span>
        <span class="bubble b6"></span>
    </div>

    <!-- CARD QUÊN MẬT KHẨU -->
    <div class="auth-wrapper">
        <div class="auth-card auth-card-login forgot-card">
            <h1 class="auth-title">Quên mật khẩu</h1>

            <p class="forgot-desc">
                Nhập Email hoặc Số điện thoại bạn đã đăng ký.<br>
                Chúng tôi sẽ gửi hướng dẫn đặt lại mật khẩu.
            </p>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">@TempData["Success"]</div>
            }

            <form class="auth-form" asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="auth-input-group">
                    <label asp-for="EmailOrPhone">Email hoặc Số điện thoại</label>
                    <div class="auth-input-wrapper">
                        <input type="text" asp-for="EmailOrPhone" placeholder="example@email.com" required />
                    </div>
                    <span asp-validation-for="EmailOrPhone" class="text-danger"></span>
                </div>

                <button type="submit" class="auth-btn">
                    Gửi yêu cầu đặt lại mật khẩu
                </button>

                <div class="auth-footer">
                    <span>Đã nhớ mật khẩu?</span>
                    <a asp-action="Login" class="auth-link-highlight">Đăng nhập</a>
                </div>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/head.js" asp-append-version="true"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
