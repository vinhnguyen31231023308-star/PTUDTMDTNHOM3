@model List<HairNovaShop.Models.Category>

@if (Model != null && Model.Any())
{
    @foreach (var cat in Model)
    {
        <li><a asp-controller="Shop" asp-action="Index" asp-route-category="@cat.Name">@cat.Name</a></li>
    }
}
else
{
    <li><a href="#">Dầu gội</a></li>
    <li><a href="#">Dầu xả</a></li>
    <li><a href="#">Dầu dưỡng</a></li>
    <li><a href="#">Thuốc nhuộm</a></li>
}
