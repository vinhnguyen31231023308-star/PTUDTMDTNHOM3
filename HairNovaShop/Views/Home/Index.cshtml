@{
    ViewData["Title"] = "Trang chủ - HairNovaShop";
    var allFeaturedProducts = ViewBag.AllFeaturedProducts as List<HairNovaShop.Models.Product> ?? new List<HairNovaShop.Models.Product>();
    var newProducts = ViewBag.NewProducts as List<HairNovaShop.Models.Product> ?? new List<HairNovaShop.Models.Product>();
    var onSaleProducts = ViewBag.OnSaleProducts as List<HairNovaShop.Models.Product> ?? new List<HairNovaShop.Models.Product>();
    var categories = ViewBag.Categories as List<HairNovaShop.Models.Category> ?? new List<HairNovaShop.Models.Category>();
    var allCategories = ViewBag.AllCategories as List<HairNovaShop.Models.Category> ?? new List<HairNovaShop.Models.Category>();
