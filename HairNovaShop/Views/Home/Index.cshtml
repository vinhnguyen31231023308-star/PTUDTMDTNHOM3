@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/css/home.css" asp-append-version="true" />
}

<div class="home">
    <!-- BANNER SECTION -->
    <section class="banner hidden-up delay-100">
        <div class="banner-content">
            <span class="subtitle">Giải pháp chăm sóc tóc</span>

            <div class="trustpilot">
                <span class="star-icon">★</span> 4.9 từ khách hàng tin dùng
            </div>

            <h1 class="section-title">HairNova - Nơi mái tóc được yêu thương</h1>

            <p class="banner-desc">
                Trải nghiệm tinh chất thiên nhiên, nuôi dưỡng dịu nhẹ, mang lại độ mềm mượt và sức sống lâu dài. Làn tóc khỏe đẹp bắt đầu từ HairNova.
            </p>
            <div class="cta-group">
                <a asp-controller="Shop" asp-action="Index" class="btn btn-primary">Mua Ngay!</a>
                <a href="#about" class="btn btn-outline">Về Chúng Tôi</a>
            </div>
        </div>

        <div class="banner-visuals">
            <div class="phone-mockup">
                <img src="~/images/imghome/banner.jpg" alt="Banner" onerror="this.style.display='none'">
            </div>
            <div class="floating-card card-product">
                <img src="~/images/imghome/sanpham.png" alt="Product" onerror="this.style.display='none'">
                <div class="add-btn">Thêm giỏ hàng</div>
            </div>
            <div class="floating-card card-rating">
                <span class="stars">★★★★★</span>
            </div>
            <div class="floating-card card-check">
                <div class="check-item"><span class="check-icon">✓</span> Thành phần sạch & bền vững</div>
                <div class="check-item"><span class="check-icon">✓</span> Tăng cường độ chắc khỏe</div>
            </div>
            <div class="floating-card card-tags">
                <span class="tag">#Uy tín</span>
                <span class="tag">#Chất lượng</span>
