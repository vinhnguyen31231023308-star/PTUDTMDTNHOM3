@model HairNovaShop.Models.Category
@{
    ViewData["Title"] = "Chỉnh sửa danh mục";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-page-header">
    <h1>Chỉnh sửa danh mục</h1>
    <p>Cập nhật thông tin danh mục sản phẩm</p>
</div>

<div class="admin-card">
    <form asp-action="EditCategory" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Tên danh mục <span class="text-danger">*</span></label>
            <input asp-for="Name" class="form-control" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                <label asp-for="IsActive" class="form-check-label">Kích hoạt danh mục này</label>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn admin-btn-primary">
                <i class="fas fa-save me-2"></i>Cập nhật danh mục
            </button>
            <a asp-action="Categories" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Hủy
            </a>
        </div>
    </form>
</div>
