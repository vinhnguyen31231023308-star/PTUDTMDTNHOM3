    .status-select:focus {
        box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.25);
    }
    .status-select.disabled-status {
        background-color: #f8f9fa;
        opacity: 0.8;
        cursor: not-allowed;
    }
    .status-select option[value="pending"] { background: #fff3cd; }
    .status-select option[value="confirmed"] { background: #d1ecf1; }
    .status-select option[value="shipping"] { background: #cfe2ff; }
    .status-select option[value="completed"] { background: #d1e7dd; }
    .status-select option[value="cancelled"] { background: #f8d7da; }
    
    /* Toast Styles */
    .admin-toast {
        min-width: 350px;
        border-radius: 12px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.15);
        overflow: hidden;
        animation: slideIn 0.4s ease;
    }
    .admin-toast.success {
        border-left: 4px solid #22c55e;
    }
    .admin-toast.error {
        border-left: 4px solid #ef4444;
    }
    .admin-toast .toast-header {
        background: #fff;
        border-bottom: none;
        padding: 12px 16px 8px;
    }
    .admin-toast .toast-body {
        padding: 8px 16px 16px;
    }
    .admin-toast.success .toast-icon {
        color: #22c55e;
    }
    .admin-toast.error .toast-icon {
        color: #ef4444;
    }
    .toast-progress {
        height: 3px;
        background: linear-gradient(90deg, #22c55e, #16a34a);
        animation: progressShrink 5s linear forwards;
    }
    .admin-toast.error .toast-progress {
        background: linear-gradient(90deg, #ef4444, #dc2626);
    }
    
    @@keyframes slideIn {
        from { transform: translateX(100%); opacity: 0; }
        to { transform: translateX(0); opacity: 1; }
    }
    @@keyframes progressShrink {
        from { width: 100%; }
        to { width: 0%; }
    }
    
    /* Loading overlay */
    .status-loading {
        position: relative;
        pointer-events: none;
        opacity: 0.6;
    }
    .status-loading::after {
        content: '';
        position: absolute;
        right: 10px;
        top: 50%;
        transform: translateY(-50%);
        width: 16px;
        height: 16px;
        border: 2px solid #ddd;
        border-top-color: #0d6efd;
        border-radius: 50%;
        animation: spin 0.8s linear infinite;
    }
    @@keyframes spin {
        to { transform: translateY(-50%) rotate(360deg); }
    }
</style>
}

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Handle status change
    document.querySelectorAll('.status-select').forEach(select => {
        select.addEventListener('change', async function() {
            const orderId = this.dataset.orderId;
            const currentStatus = this.dataset.currentStatus;
            const newStatus = this.value;
            
            // Confirm cancellation
            if (newStatus === 'cancelled') {
                if (!confirm('B·∫°n c√≥ ch·∫Øc ch·∫Øn mu·ªën H·ª¶Y ƒë∆°n h√†ng n√†y? H√†nh ƒë·ªông n√†y kh√¥ng th·ªÉ ho√†n t√°c!')) {
                    this.value = currentStatus;
                    return;
                }
            }
            
            // Confirm completion
            if (newStatus === 'completed') {
                if (!confirm('X√°c nh·∫≠n ƒë∆°n h√†ng ƒë√£ HO√ÄN TH√ÄNH? Sau khi ho√†n th√†nh s·∫Ω kh√¥ng th·ªÉ thay ƒë·ªïi tr·∫°ng th√°i!')) {
                    this.value = currentStatus;
                    return;
                }
            }
            
            // Show loading state
            this.classList.add('status-loading');
            this.disabled = true;
            
            try {
                const response = await fetch('@Url.Action("UpdateOrderStatus", "Admin")', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded',
                    },
                    body: `id=${orderId}&status=${newStatus}`
                });
                
                const result = await response.json();
                
                if (result.success) {
                    // Update the current status data attribute
                    this.dataset.currentStatus = newStatus;
                    
                    // If completed or cancelled, disable the select
                    if (newStatus === 'completed' || newStatus === 'cancelled') {
                        this.disabled = true;
                        this.classList.add('disabled-status');
                        
                        // Add lock message
                        const lockMsg = document.createElement('small');
                        lockMsg.className = 'text-muted d-block mt-1';
                        lockMsg.innerHTML = '<i class="fas fa-lock"></i> Kh√¥ng th·ªÉ thay ƒë·ªïi';
                        this.parentNode.appendChild(lockMsg);
                    }
                    
                    showToast('success', 'Th√†nh c√¥ng!', result.message);
                } else {
                    // Revert to previous value
                    this.value = currentStatus;
                    showToast('error', 'L·ªói!', result.message);
                }
            } catch (error) {
                // Revert to previous value
                this.value = currentStatus;
                showToast('error', 'L·ªói!', 'C√≥ l·ªói x·∫£y ra khi c·∫≠p nh·∫≠t tr·∫°ng th√°i. Vui l√≤ng th·ª≠ l·∫°i!');
            } finally {
                this.classList.remove('status-loading');
                if (this.dataset.currentStatus !== 'completed' && this.dataset.currentStatus !== 'cancelled') {
                    this.disabled = false;
                }
            }
        });
    });
    
    // Search and Filter functionality
    const searchInput = document.getElementById('searchInput');
    const statusFilter = document.getElementById('statusFilter');
    const tableRows = document.querySelectorAll('tbody tr[id^="order-row-"]');
    
    function filterTable() {
        const searchTerm = searchInput.value.toLowerCase().trim();
        const statusValue = statusFilter.value;
        let visibleCount = 0;
        
        tableRows.forEach(row => {
            const orderCode = row.querySelector('td:nth-child(1)')?.textContent.toLowerCase() || '';
            const customerName = row.querySelector('td:nth-child(2)')?.textContent.toLowerCase() || '';
            const phone = row.querySelector('td:nth-child(3)')?.textContent.toLowerCase() || '';
            const currentStatus = row.querySelector('.status-select')?.dataset.currentStatus || '';
            
            const matchesSearch = orderCode.includes(searchTerm) || 
                                  customerName.includes(searchTerm) || 
                                  phone.includes(searchTerm);
            const matchesStatus = !statusValue || currentStatus === statusValue;
            
            if (matchesSearch && matchesStatus) {
                row.style.display = '';
                visibleCount++;
            } else {
                row.style.display = 'none';
            }
        });
        
        // Show/hide no results message
        const noResultsRow = document.getElementById('noResultsRow');
        if (visibleCount === 0 && tableRows.length > 0) {
            if (!noResultsRow) {
                const tbody = document.querySelector('tbody');
                const newRow = document.createElement('tr');
                newRow.id = 'noResultsRow';
                newRow.innerHTML = '<td colspan="8" class="text-center py-4 text-muted"><i class="fas fa-search me-2"></i>Kh√¥ng t√¨m th·∫•y k·∫øt qu·∫£ ph√π h·ª£p</td>';
                tbody.appendChild(newRow);
            }
        } else if (noResultsRow) {
            noResultsRow.remove();
        }
    }
    
    searchInput.addEventListener('input', filterTable);
    statusFilter.addEventListener('change', filterTable);

    // Toast function
    function showToast(type, title, message) {
        const container = document.getElementById('toastContainer');
        const toastId = 'toast-' + Date.now();
        
        const iconClass = type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle';
        
        const toastHtml = `
            <div id="${toastId}" class="toast admin-toast ${type}" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="toast-header">
                    <i class="fas ${iconClass} toast-icon me-2 fs-5"></i>
                    <strong class="me-auto">${title}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
                <div class="toast-body">
                    ${message}
                </div>
                <div class="toast-progress"></div>
            </div>
        `;
        
        container.insertAdjacentHTML('beforeend', toastHtml);
        
        const toastElement = document.getElementById(toastId);
        const toast = new bootstrap.Toast(toastElement, { autohide: true, delay: 5000 });
        toast.show();
        
        // Remove toast element after it's hidden
        toastElement.addEventListener('hidden.bs.toast', function() {
            this.remove();
        });
    }
});
</script>
}
