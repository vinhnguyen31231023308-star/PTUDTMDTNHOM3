@model HairNovaShop.Models.Category
@{
    ViewData["Title"] = "Thêm danh mục mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-page-header">
    <h1>Thêm danh mục mới</h1>
    <p>Tạo danh mục sản phẩm mới trong hệ thống</p>
</div>

<div class="admin-card">
    <form asp-action="CreateCategory" method="post">
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Tên danh mục <span class="text-danger">*</span></label>
            <input asp-for="Name" class="form-control" required placeholder="VD: Dầu gội, Dầu xả, Sản phẩm dưỡng tóc..." />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="Mô tả về danh mục này..."></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <div class="form-check">
                <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                <label asp-for="IsActive" class="form-check-label">Kích hoạt danh mục này</label>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn admin-btn-primary">
                <i class="fas fa-save me-2"></i>Tạo danh mục
            </button>
            <a asp-action="Categories" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Hủy
            </a>
        </div>
    </form>
</div>
