@model HairNovaShop.Models.Product
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="admin-page-header">
    <h1>Chỉnh sửa sản phẩm</h1>
    <p>Cập nhật thông tin sản phẩm #@Model.Id</p>
</div>

<div class="admin-card">
    <form asp-action="EditProduct" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        <div class="row mb-3">
            <div class="col-md-8">
                <label asp-for="Name" class="form-label">Tên sản phẩm <span class="text-danger">*</span></label>
                <input asp-for="Name" class="form-control" required />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="CategoryId" class="form-label">Danh mục</label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                    <option value="">-- Chọn danh mục --</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Price" class="form-label">Giá bán <span class="text-danger">*</span></label>
                <input asp-for="Price" type="number" step="0.01" class="form-control" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="OriginalPrice" class="form-label">Giá gốc</label>
                <input asp-for="OriginalPrice" type="number" step="0.01" class="form-control" />
                <span asp-validation-for="OriginalPrice" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="SKU" class="form-label">SKU</label>
                <input asp-for="SKU" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Stock" class="form-label">Tồn kho (tổng - tự động tính từ variants)</label>
                <input asp-for="Stock" type="number" class="form-control" readonly />
                <small class="text-muted">Tồn kho sẽ được tính tự động từ các variants bên dưới</small>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Brand" class="form-label">Thương hiệu</label>
                <input asp-for="Brand" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="Origin" class="form-label">Xuất xứ</label>
                <input asp-for="Origin" class="form-control" />
            </div>
        </div>

        <!-- Product Variants Management -->
        <div class="mb-3">
            <label class="form-label">Quản lý tồn kho theo dung tích</label>
            <div id="variants-container">
                @{
                    var variantsJson = Model.StockByCapacity ?? "[]";
                    var variants = new List<object>();
                    try
                    {
                        variants = System.Text.Json.JsonSerializer.Deserialize<List<object>>(variantsJson) ?? new List<object>();
                    }
                    catch { }
                    
                    if (variants.Any())
                    {
                        foreach (var variantObj in variants)
                        {
                            var variant = System.Text.Json.JsonSerializer.Deserialize<Dictionary<string, object>>(variantObj.ToString() ?? "{}");
                            var capacity = variant?.GetValueOrDefault("Capacity")?.ToString() ?? "";
                            var price = variant?.GetValueOrDefault("Price")?.ToString();
                            var stock = variant?.GetValueOrDefault("Stock")?.ToString() ?? "0";
                            
                            <div class="variant-item mb-2 p-3 border rounded">
                                <div class="row g-2">
                                    <div class="col-md-4">
                                        <input type="text" class="form-control variant-capacity" placeholder="Dung tích (VD: 250ml)" value="@capacity" />
                                    </div>
                                    <div class="col-md-3">
                                        <input type="number" step="0.01" class="form-control variant-price" placeholder="Giá (để trống dùng giá mặc định)" value="@price" />
                                    </div>
                                    <div class="col-md-3">
                                        <input type="number" class="form-control variant-stock" placeholder="Tồn kho" value="@stock" min="0" />
                                    </div>
                                    <div class="col-md-2">
                                        <button type="button" class="btn btn-danger btn-sm remove-variant">Xóa</button>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <div class="variant-item mb-2 p-3 border rounded">
                            <div class="row g-2">
                                <div class="col-md-4">
                                    <input type="text" class="form-control variant-capacity" placeholder="Dung tích (VD: 250ml)" />
                                </div>
                                <div class="col-md-3">
                                    <input type="number" step="0.01" class="form-control variant-price" placeholder="Giá (để trống dùng giá mặc định)" />
                                </div>
                                <div class="col-md-3">
                                    <input type="number" class="form-control variant-stock" placeholder="Tồn kho" value="0" min="0" />
                                </div>
                                <div class="col-md-2">
                                    <button type="button" class="btn btn-danger btn-sm remove-variant">Xóa</button>
                                </div>
                            </div>
                        </div>
                    }
                }
            </div>
            <button type="button" class="btn btn-secondary btn-sm mt-2" id="add-variant">
                <i class="fas fa-plus me-1"></i>Thêm dung tích
            </button>
            <input type="hidden" id="stockByCapacity" name="StockByCapacity" value="@Model.StockByCapacity" />
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label asp-for="Tags" class="form-label">Tags</label>
                <input asp-for="Tags" class="form-control" />
            </div>
            <div class="col-md-6">
                <label asp-for="ExpiryDate" class="form-label">Hạn sử dụng</label>
                <input asp-for="ExpiryDate" class="form-control" />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Mô tả ngắn</label>
            <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="DetailedDescription" class="form-label">Mô tả chi tiết</label>
            <textarea asp-for="DetailedDescription" class="form-control" rows="6"></textarea>
        </div>

        <div class="row mb-3">
            <div class="col-md-6">
                <label for="mainImage" class="form-label">Hình ảnh chính (để trống nếu không thay đổi)</label>
                <input type="file" name="mainImage" id="mainImage" class="form-control" accept="image/*" />
                @if (!string.IsNullOrEmpty(Model.MainImage))
                {
                    <div class="mt-2">
                        <img src="@Model.MainImage" alt="Current" style="max-width: 200px; border-radius: 4px;" />
                    </div>
                }
            </div>
            <div class="col-md-6">
                <label for="images" class="form-label">Thêm hình ảnh phụ</label>
                <input type="file" name="images" id="images" class="form-control" accept="image/*" multiple />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <div class="form-check">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" />
                    <label asp-for="IsActive" class="form-check-label">Hoạt động</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check">
                    <input asp-for="IsFeatured" class="form-check-input" type="checkbox" />
                    <label asp-for="IsFeatured" class="form-check-label">Nổi bật</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check">
                    <input asp-for="IsNew" class="form-check-input" type="checkbox" />
                    <label asp-for="IsNew" class="form-check-label">Sản phẩm mới</label>
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-check">
                    <input asp-for="OnSale" class="form-check-input" type="checkbox" />
                    <label asp-for="OnSale" class="form-check-label">Đang giảm giá</label>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn admin-btn-primary" onclick="updateVariantsBeforeSubmit(event)">
                <i class="fas fa-save me-2"></i>Cập nhật
            </button>
            <a asp-action="Products" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Hủy
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // Add new variant row
        document.getElementById('add-variant')?.addEventListener('click', function() {
            const container = document.getElementById('variants-container');
            const newRow = document.createElement('div');
            newRow.className = 'variant-item mb-2 p-3 border rounded';
            newRow.innerHTML = `
                <div class="row g-2">
                    <div class="col-md-4">
                        <input type="text" class="form-control variant-capacity" placeholder="Dung tích (VD: 250ml)" />
                    </div>
                    <div class="col-md-3">
                        <input type="number" step="0.01" class="form-control variant-price" placeholder="Giá (để trống dùng giá mặc định)" />
                    </div>
                    <div class="col-md-3">
                        <input type="number" class="form-control variant-stock" placeholder="Tồn kho" value="0" min="0" />
                    </div>
                    <div class="col-md-2">
                        <button type="button" class="btn btn-danger btn-sm remove-variant">Xóa</button>
                    </div>
                </div>
            `;
            container.appendChild(newRow);
            attachRemoveHandler(newRow);
        });

        // Remove variant row
        function attachRemoveHandler(row) {
            row.querySelector('.remove-variant')?.addEventListener('click', function() {
                row.remove();
                updateVariantsAndStock();
            });
        }

        // Update variants JSON and total stock before submit
        function updateVariantsBeforeSubmit(event) {
            updateVariantsAndStock();
        }

        function updateVariantsAndStock() {
            const variants = [];
            const variantItems = document.querySelectorAll('.variant-item');
            let totalStock = 0;

            variantItems.forEach(item => {
                const capacity = item.querySelector('.variant-capacity')?.value?.trim();
                const priceInput = item.querySelector('.variant-price')?.value?.trim();
                const stockInput = item.querySelector('.variant-stock')?.value?.trim();

                if (capacity) {
                    const stock = parseInt(stockInput) || 0;
                    totalStock += stock;
                    variants.push({
                        Capacity: capacity,
                        Price: priceInput ? parseFloat(priceInput) : null,
                        Stock: stock
                    });
                }
            });

            // Update hidden field
            document.getElementById('stockByCapacity').value = JSON.stringify(variants);
            // Update total stock field
            document.querySelector('input[name="Stock"]').value = totalStock;
        }

        // Attach remove handlers to existing rows
        document.querySelectorAll('.variant-item').forEach(attachRemoveHandler);

        // Update on input change
        document.getElementById('variants-container')?.addEventListener('input', function(e) {
            if (e.target.classList.contains('variant-capacity') || 
                e.target.classList.contains('variant-price') || 
                e.target.classList.contains('variant-stock')) {
                updateVariantsAndStock();
            }
        });
    </script>
}
